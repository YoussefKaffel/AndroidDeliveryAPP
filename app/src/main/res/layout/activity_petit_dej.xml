<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetitDejActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisissez votre petit dej:"
        android:textSize="48px"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colore_one"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/yellow"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matinal: 8DT"
        android:textSize="48px"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colore_two"/>
    <ImageButton
        android:id="@+id/pdej_matinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/p_matinal"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/yellow"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Healthy: 15DT"
        android:textSize="48px"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colore_two"/>
    <ImageButton
        android:id="@+id/pdej_healthy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/p_healthy"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gris"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gourmet: 16DT"
        android:textSize="48px"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colore_two"/>
    <ImageButton
        android:id="@+id/pdej_gourmet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/p_gourmet"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gris">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supplément"
        android:textAlignment="center"
        android:textColor="@color/black">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/colore_one"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Croissant"/>
        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cake"
            android:textAlignment="center"
            android:textColor="@color/colore_one"
            android:layout_gravity="center"/>
        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Oeuf"
            android:textAlignment="center"
            android:textColor="@color/colore_one"
            android:layout_gravity="center"/>
        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Granola"
            android:textAlignment="center"
            android:textColor="@color/colore_one"
            android:layout_gravity="center"/>
        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bruschettas"
            android:textAlignment="center"
            android:textColor="@color/colore_one"
            android:layout_gravity="center"/>
        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="PanCake"
        android:textAlignment="center"
        android:textColor="@color/colore_one"
        android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/img_s1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/croissant" />
        <ImageButton
            android:id="@+id/img_s2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/cake" />
        <ImageButton
            android:id="@+id/img_s3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/oeuf" />
        <ImageButton
            android:id="@+id/img_s4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/granola"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter">
        </ImageButton>
        <ImageButton
            android:id="@+id/img_s5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/bruschettas"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter">
        </ImageButton>
        <ImageButton
            android:id="@+id/img_s6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pancake"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter">
        </ImageButton>

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_plate_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Ajoutez un repas"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/facture_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Passer à la facture"
            android:layout_margin="2dp" />
    </LinearLayout>
</LinearLayout>
</ScrollView>