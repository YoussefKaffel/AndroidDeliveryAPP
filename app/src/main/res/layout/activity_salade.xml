<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaladeActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salade Personnalisée"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/colore_one"
            android:textSize="10pt"
            android:layout_margin="4dp"
            />

        <ImageButton
            android:id="@+id/salade_per"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/saladepersonnalise"
            android:layout_margin="4dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salade Recommandée"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/colore_one"
            android:textSize="10pt"
            android:layout_margin="4dp"
            />

        <ImageButton
            android:id="@+id/salade_rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/saladerecommande"
            android:layout_margin="12dp"/>

    </LinearLayout>
</LinearLayout>
